# Environment Configuration Template - Generic Multi-Client Web Scraper
# Copy this file to .env and configure your settings

# =============================================================================
# CORE SCRAPING SETTINGS
# =============================================================================

# Concurrency and performance
CONCURRENCY_LIMIT=3
CHUNKSIZE=500

# Rate limiting (requests per second)
DEFAULT_RATE_LIMIT=1.0

# Timeout settings (seconds)
REQUEST_TIMEOUT=30
TOTAL_TIMEOUT=300

# =============================================================================
# PROXY CONFIGURATION
# =============================================================================

# Proxy server settings (optional)
PROXY_USERNAME=ukxv6pnb5wervp3
PROXY_PASSWORD=eww7ejd4luzk3vn
PROXY_HOST=rp.proxyscrape.com:6060

# Alternative proxy URL format
# PROXY_URL=http://username:password@proxy-server:port

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log settings
LOG_FILE=modern_refactored.log
LOG_LEVEL=INFO

# Additional logging options
# LOG_TO_CONSOLE=true
# LOG_TO_FILE=true

# =============================================================================
# EMAIL NOTIFICATION SETTINGS
# =============================================================================

# Email notifications (optional)
EMAIL_NOTIFY_TO=your@email.com

# SMTP server configuration (if using custom SMTP)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# FROM_EMAIL=your_email@gmail.com

# =============================================================================
# CLIENT-SPECIFIC SETTINGS
# =============================================================================

# G2S Equipment specific settings
# G2S_BASE_URL=https://g2s-equipment.com
# G2S_SEARCH_PATH=/search
# G2S_RATE_LIMIT=1.0

# Demo client settings  
# DEMO_BASE_URL=https://example.com
# DEMO_RATE_LIMIT=0.5

# Electronics supplier settings
# ELECTRONICS_BASE_URL=https://electronics-supplier.com
# ELECTRONICS_API_KEY=your_api_key
# ELECTRONICS_RATE_LIMIT=2.0

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# User agent string for requests
# USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# Connection pool settings
# MAX_CONNECTIONS=100
# MAX_CONNECTIONS_PER_HOST=10

# Cache settings (for resume functionality)
# CACHE_DIR=.cache
# CACHE_ENABLED=true

# Output settings
# DEFAULT_OUTPUT_FORMAT=csv
# OUTPUT_ENCODING=utf-8

# Retry configuration
# MAX_RETRIES=3
# RETRY_DELAY=1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API keys and secrets (keep these secure!)
# API_KEY_1=your_secret_api_key
# API_SECRET_1=your_secret_key

# Database connection (if using database storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/scraper_db

# JWT secret (if using authentication)
# JWT_SECRET=your_jwt_secret_key

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# =============================================================================

# Enable debug mode
# DEBUG=false

# Save raw HTML responses for debugging
# SAVE_HTML_RESPONSES=false
# HTML_RESPONSE_DIR=debug_html

# Enable request/response logging
# LOG_HTTP_REQUESTS=false

# Mock mode (for testing without actual requests)
# MOCK_MODE=false

# =============================================================================
# NOTES
# =============================================================================

# 1. Remove the # symbol to uncomment and activate a setting
# 2. Never commit the actual .env file with real credentials to version control
# 3. Use strong passwords and rotate them regularly
# 4. For Gmail SMTP, use App Passwords instead of your main password
# 5. Consider using environment-specific files (.env.dev, .env.prod, etc.)
# 6. The scraper will work without any environment variables (using defaults)
# 7. Client-specific settings override global defaults
# 8. Some settings may require application restart to take effect
